{% extends 'base.html.twig' %}

{% block title %}Leaf index{% endblock %}

{% block body %}
    <h1>Leaf index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for leaf in leaves %}
            <tr>
                <td>{{ leaf.id }}</td>
                <td>{{ leaf.Name }}</td>
                <td>{{ leaf.description }}</td>
                <td>
                    <a href="{{ path('leaf_show', {'id': leaf.id}) }}">show</a>
                    <a href="{{ path('leaf_edit', {'id': leaf.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('leaf_new') }}">Create new</a>
{% endblock %}
