{% extends 'base.html.twig' %}

{% block title %}Board index{% endblock %}

{% block body %}
    <h1>Board index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UsualName</th>
                <th>Observation</th>
                <th>Progress</th>
                <th>Typology</th>
                <th>Approval</th>
                <th>Domain</th>
                <th>TypologySI</th>
                <th>Location</th>
                <th>Entity</th>
                <th>Technology</th>
                <th>Network</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for board in boards %}
            <tr>
                <td>{{ board.id }}</td>
                <td>{{ board.usualName }}</td>
                <td>{{ board.observation }}</td>
                <td>{{ board.progress }}</td>
                <td>{{ board.typology }}</td>
                <td>{{ board.approval }}</td>
                <td>{{ board.domain }}</td>
                <td>{{ board.typologySI }}</td>
                <td>{{ board.location }}</td>
                <td>{{ board.entity }}</td>
                <td>{{ board.technology }}</td>
                <td>{{ board.network }}</td>
                <td>
                    <a href="{{ path('board_show', {'id': board.id}) }}">show</a>
                    <a href="{{ path('board_edit', {'id': board.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('board_new') }}">Create new</a>
{% endblock %}
